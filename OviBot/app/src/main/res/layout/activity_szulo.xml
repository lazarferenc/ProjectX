<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.rft.pti.eke.ovibot.Szulo"
    android:background="#008080">

    <Button
    android:text="@string/kindergarten_teachers"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btn_ovonok"
    android:layout_centerVertical="true"
    android:layout_alignLeft="@+id/btn_etkezes"
    android:layout_alignStart="@+id/btn_etkezes"
    android:layout_alignRight="@+id/btn_gyerekem"
    android:layout_alignEnd="@+id/btn_gyerekem"
        android:onClick="ovonok"/><!--Óvónők-->
    <Button
        android:text="@string/child"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_gyerekem"
        android:onClick="gyerekek"
        android:layout_above="@+id/btn_ovonok"
        android:layout_marginBottom="47dp"
        android:layout_toLeftOf="@+id/log_out_button" /><!--Gyerekek-->
    <Button
    android:text="@string/menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btn_etkezes"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/btn_ovonok"
        android:layout_alignLeft="@+id/btn_gyerekem"
        android:layout_alignStart="@+id/btn_gyerekem"
        android:layout_alignRight="@+id/btn_gyerekem"
        android:layout_alignEnd="@+id/btn_gyerekem"
        android:onClick="etkezes"/><!--Étkezés-->
    <Button
        android:id="@+id/log_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/action_log_out" /><!--Kilépés-->
</RelativeLayout>